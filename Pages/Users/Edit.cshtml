@page
@model Fivesemtest.Pages.Users.EditModel

@{
    ViewData["Title"] = "Редактировать пользователя";
}

<h1>Редактировать пользователя</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="User.UserName" class="control-label">Имя пользователя</label>
        <input asp-for="User.UserName" class="form-control" />
        <span asp-validation-for="User.UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.Email" class="control-label">Электронная почта</label>
        <input asp-for="User.Email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
